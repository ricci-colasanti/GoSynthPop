package main

import (
	"fmt"
	"sync"
	"time"
)

func count(id int, wg *sync.WaitGroup) {
	//defer wg.Done()
	for i := 0; i < 3; i++ {
		fmt.Printf("Process %d loop % d \n", id, i)
		time.Sleep(1 * time.Second)
	}
	wg.Done()
}
func main() {
	var wg sync.WaitGroup
	for i := 0; i < 4; i++ {
		wg.Add(1)
		go count(i, &wg)
	}
	wg.Wait()
	fmt.Println("done")
}
